@model BokToppen.Models.UserModel;
@{
    ViewData["Title"] = "CreateUser";
}

<h1>@ViewData["Title"]</h1>

<div>
    <p>hello</p>

    <p>Antal poster uppdaterade: @ViewBag.antal</p>
    <p>Felmeddelande: @ViewBag.error</p>
</div>


<div class="d-flex justify-content-center mt-5">
  <div class="card" style="width: 50vw;">
    <div class="card-body">
        <h5 class="card-title">Skapa användare</h5>
        <form method="post" asp-action="CreateUser">
            <div class="mb-3">
                <label asp-for="Username" class="form-label">Användarnamn</label>
                <input type="text" asp-for="Username" name="username" class="form-control">
                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input type="email" asp-for="Email" name="email" class="form-control">
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Lösenord</label>
                <input type="password" asp-for="Password" name="password" class="form-control">
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
            <input type="submit" class="btn btn-primary" value="Skapa användare"/>
        </form>
    </div>
  </div>
</div>