  <form method="post" asp-action="Edit" class="mt-2">
        <div class="mb-3">
          <label asp-for="Title" class="form-label">Titel</label>
          <input asp-for="Title" class="form-control" value="@Model.Title">
          @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
        </div>
        <div class="mb-3">
          <label asp-for="ISBN" class="form-label">ISBN</label>
          <input asp-for="ISBN" class="form-control" value="@Model.ISBN">
          @Html.ValidationMessageFor(m => m.ISBN, "", new { @class = "text-danger" })
        </div>
        <div class="mb-3">
          <label asp-for="CategoryId" class="form-label">Kategori</label>
          <select asp-for="CategoryId" class="form-select" aria-label="Default select example">
            @{
              foreach (var category in ViewData["category"] as List<CategoryModel>)
              {
                <option value="@category.Id" selected="@(category.Id == Model.CategoryId)">@category.Category</option>
              }
            }
          </select>
        </div>
        <div class="mb-3">
          <label asp-for="PublicationYear" class="form-label">Publiceringsår</label>
          <input asp-for="PublicationYear" type="number" class="form-control">
          @Html.ValidationMessageFor(m => m.PublicationYear, "", new { @class = "text-danger" })
        </div>
        <div class="mb-3">
          <label asp-for="Description" class="form-label">Beskrivning</label>
          <textarea asp-for="Description" class="form-control" value="@Model.Description" rows="5"></textarea>
          @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
        </div>
        <input asp-for="Id" type="hidden">
        <button type="submit" class="btn btn-primary">Spara ändringar</button>
      </form>

    </div>
  </div>
